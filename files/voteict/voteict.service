[Unit]
Description=VoteICT Service
Requires=docker.service
After=docker.service

[Service]
Restart=always

User=www-data
Group=www-data

WorkingDirectory=/var/www/voteict

# Remove old containers, images and volumes
ExecStartPre=/usr/bin/docker-compose down
ExecStartPre=/usr/bin/docker-compose rm -f

# Should match the `make deps` command in voteict repo
ExecStartPre=/usr/bin/docker run --rm -v /var/www/voteict:/app composer install
ExecStartPre=/usr/bin/docker-compose run --rm client npm run prod

ExecStart=/usr/bin/docker-compose up caddy php-fpm db

# Compose down, remove containers and volumes
ExecStop=/usr/bin/docker-compose down

[Install]
WantedBy=multi-user.target
